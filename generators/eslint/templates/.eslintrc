---
extends: airbnb-base
parser: babel-eslint
parserOptions:
  ecmaFeatures:
    jsx: true
  ecmaVersion: 7
  sourceType: module
rules:
  class-methods-use-this: off
  comma-dangle:
    - warn
    - only-multiline
  consistent-return: off
  global-require: off
  import/prefer-default-export: off
  import/no-extraneous-dependencies:
    - warn
    - devDependencies: false
  max-len:
    - warn
    - code: 100
  no-await-in-loop: off
  no-constant-condition:
    - error
    - checkLoops: false
  no-param-reassign:
    - warn
    - props: false
  no-restricted-syntax: off
  no-trailing-spaces:
    - warn
    - skipBlankLines: true
  no-underscore-dangle:
    - error
    - allow:
        - _id
  padded-blocks: off
  semi:
    - error
    - never
